<table cellspacing="0" cellpadding="0" border="0" width="100%">
  <tbody>
    <tr>
      <td align="center" valign="top" style="padding:20px 0 20px 0">
        <table bgcolor="#FFFFFF" cellspacing="0" cellpadding="10" border="0" width="650" style="border:1px solid #e0e0e0">
          <tbody>
            <tr>
              <td valign="top">
                <figure id="logo" data-hook><%= link_to image_tag(Spree::Config[:logo]), spree.root_url %></figure>
              </td>
            </tr>
            <tr>
              <td valign="top">
                <h1 style="font-size:22px;font-weight:normal;line-height:22px;"><%= t('.hello', name: @supplier.name ) %></h1>
                <p style="font-size:12px;line-height:16px;">
                  <%= t('.thank_you_for_signing_up' ) %>
                  <%= t('.once_your_request_is_approved') %>
                  <%= t('.check_your_status' ) %>
                  <%= link_to t('.logging_into_your_account'), spree.account_url, target: '_blank' %>
                </p>
              </td>
            </tr>
            <tr>
              <td>
                <h2 style="font-size:18px;font-weight:normal;"><%= t('.please_verify_your_information') %></h2>
                <table cellspacing="0" cellpadding="0" border="0" width="650">
                  <thead>
                    <tr>
                      <th align="left" width="325" bgcolor="#EAEAEA" style="font-size:13px;padding:5px 9px 6px 9px;line-height:1em"><%= t('.supplier_information') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td valign="top" style="font-size:12px;padding:7px 9px 9px 9px;border-left:1px solid #eaeaea;border-bottom:1px solid #eaeaea;border-right:1px solid #eaeaea">
                        <b><%= t(:name) %>:</b> <%= @supplier.name %><br/>
                        <b><%= t(:email) %>:</b> <%= mail_to @supplier.email %><br/>
                        <b><%= t('.contact_information' )%>:</b><br/>
                        <%= @supplier.address.firstname %> <%= @supplier.address.lastname %><br/>
                        <%= @supplier.address.address1 %><br/>
                        <% unless @supplier.address.address2.blank? %><%= @supplier.address.address2 %><br/><% end %>
                        <%= @supplier.address.city %>, <%= @supplier.address.state.name %> <%= @supplier.address.zipcode %><br/>
                        <%= @supplier.address.country.name %><br/>
                        T: <a href="tel:<%= @supplier.address.phone %>" value="<%= @supplier.address.phone %>" target="_blank"><%= @supplier.address.phone %></a>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            <tr>
              <td bgcolor="#EAEAEA" align="center" style="background:#eaeaea;text-align:center">
                <center>
                  <p style="font-size:12px;margin:0"><%= raw t('.thank_you_again', name: Spree::Config[:site_name]) %></p>
                </center>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
